<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dths.lijia.unlockpass.MainActivity">

    <EditText
        android:id="@+id/edbox"
        android:layout_width="match_parent"
        android:inputType="number"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_mDPM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更改密码（设备管理器）" />
    <Button
        android:id="@+id/btn_rootclean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除密码（root）"/>
    <!--<Button
        android:id="@+id/btn_cleanbyreboot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#F00"
        android:text="重启清除密码（root）"/>-->
    <Button
        android:id="@+id/btn_checkupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="检查更新"/>
    <Button
        android:id="@+id/btn_reporterror"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上报错误"/>
    <Button
        android:id="@+id/btn_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于作者"/>
</LinearLayout>
